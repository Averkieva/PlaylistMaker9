<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_2"
    android:orientation="vertical"
    android:paddingLeft="@dimen/radius_and_margin_top"
    android:paddingRight = "@dimen/paddingRight">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id = "@+id/returnButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart = "4dp"
            android:src="@drawable/back"
            android:layout_gravity="center_vertical"
            android:paddingTop = "16dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text = "@string/settings"
            android:layout_marginTop="-2dp"
            android:layout_marginStart="28dp"
            android:textStyle="bold"
            android:textColor="@color/black_1"
            android:textSize="@dimen/primary_text_size"
            android:paddingTop = "14dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/for_text"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:gravity="center">
        <Switch

            android:paddingVertical = "@dimen/marginVertical"
            android:paddingEnd = "2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/primary_text_size_16sp"
            android:textColor="@color/black_2"
            android:text="@string/dark_article"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/primary_text_size_16sp"
            android:textColor="@color/black_2"
            android:layout_marginVertical="@dimen/marginVertical"
            android:text="@string/share"
            android:layout_marginRight = "@dimen/icon_padding"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/share"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginVertical="@dimen/marginVertical"
            android:textSize="@dimen/primary_text_size_16sp"
            android:textColor="@color/black_2"
            android:text="@string/support"
            android:layout_marginRight = "@dimen/icon_padding"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/support"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginVertical="@dimen/marginVertical"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/primary_text_size_16sp"
            android:textColor="@color/black_2"
            android:text="@string/user"
            android:layout_marginRight = "@dimen/icon_padding"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/user"
            />
    </LinearLayout>
</LinearLayout>
