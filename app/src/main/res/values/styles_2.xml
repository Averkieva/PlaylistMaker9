<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="activity_main_buttons_style" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black_1</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="cornerRadius">@dimen/radius_and_margin_top</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/black_1</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>


    </style>

    <style name="activity_settings_icons_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tint">?attr/colorSecondary</item>

    </style>

    <style name="activity_settings_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginVertical">@dimen/marginVertical</item>
        <item name="android:layout_marginRight">@dimen/icon_padding</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/primary_text_size_16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>

    </style>

    <style name="switch_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/primary_text_size_16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>

    </style>

    <style name="activity_settings_linear_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>

    </style>

    <style name="activity_search_linear_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/for_text</item>
        <item name="android:background">?attr/colorPrimaryVariant</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>

    </style>

    <style name="result_of_search_main_layout_style">
        <item name="android:padding">@dimen/icon_padding</item>
    </style>

    <style name="result_of_search_title_style">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/primary_text_size_16sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="result_of_search_artist_time_style">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/primary_text_size_11sp</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>